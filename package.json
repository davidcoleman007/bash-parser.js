{
  "name": "bashcodeshift",
  "version": "0.6.0",
  "description": "A jscodeshift-like toolkit for bash script transformations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bashcodeshift": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc -p tsconfig.examples.json",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docs": "typedoc src/index.ts",
    "start": "node dist/cli.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "bash",
    "codemod",
    "transform",
    "ast",
    "shell",
    "script",
    "codeshift"
  ],
  "author": "David Coleman <dcoleman@adobe.com>",
  "license": "MIT",
  "dependencies": {
    "bash-traverse": "^0.5.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:dcoleman/bashcodeshift.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bashcodeshift/issues"
  },
  "homepage": "https://github.com/yourusername/bashcodeshift#readme"
}
